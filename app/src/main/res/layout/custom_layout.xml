<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_row_select">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/net_imageview"
        android:layout_width="80dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:layout_height="80dp" />
    <!-- title of the text view -->
    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/net_imageview"
        android:layout_alignTop="@+id/net_imageview"
        android:text="text"
        android:textSize="17dp"

        />
    <!-- rating -->
    <TextView
        android:id="@+id/textview_rate"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/net_imageview"
        android:layout_below="@+id/textview_title"
        android:layout_marginTop="1dp"
        android:textSize="15dp"
        android:text="text"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textview_price"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/net_imageview"
        android:textSize="12dp"
        android:text="text"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        />

</RelativeLayout>